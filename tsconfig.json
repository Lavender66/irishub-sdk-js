{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "allowJs": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "types": ["jest", "node"],
    "resolveJsonModule": true,
  },
  "typedocOptions": {
    "mode": "file",
    "inputFiles": ["./src"],
    "out": "docs"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts", "test/jest.config.js"
  ]
}
